if [ -f /etc/shrc ]; then
	. /etc/shrc
fi

case "$-" in *i*)
	# interactive mode settings go here

	export TERM="xterm-256color"
	
	PLAN9=/home/x/plan9 export PLAN9
	PATH=$PATH:$PLAN9/bin export PATH

	PS1="$(pwd | sed "s,^$HOME,~,") > "
	set -o emacs
	;;
esac
